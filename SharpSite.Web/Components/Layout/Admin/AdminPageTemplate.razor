<section id="admin-page-template" @attributes="@Attributes">
    <header>
        <h1>@Title</h1>
        @if (!string.IsNullOrWhiteSpace(SecondaryTitle))
        {
            <h2>@SecondaryTitle</h2>
        }
    </header>
    <section class="admin-page-content">
        @if (ChildContent != null)
        {
            @ChildContent
        }
    </section>
</section>

@code {
    [Parameter, EditorRequired] public required string Title { get; set; }
    [Parameter] public string SecondaryTitle { get; set; } = string.Empty;
    [Parameter] public string Class { get; set; } = string.Empty;
    [Parameter] public RenderFragment? ChildContent { get; set; }
    private Dictionary<string, object> Attributes { get; set; } = new();

    protected override void OnInitialized()
    {
        if (!string.IsNullOrWhiteSpace(Class))
        {
            Attributes.Add("class", Class);
        }
    }
}
